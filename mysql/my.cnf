[mysqld]
# Character set
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# Memory optimization for Lightsail $5 plan (1GB total RAM)
innodb_buffer_pool_size=128M
innodb_log_file_size=32M
max_connections=50

# Performance tuning
innodb_flush_log_at_trx_commit=2
innodb_flush_method=O_DIRECT
query_cache_type=1
query_cache_size=16M

# Temporary tables
tmp_table_size=16M
max_heap_table_size=16M

# MyISAM settings
key_buffer_size=16M
read_buffer_size=1M
read_rnd_buffer_size=2M
sort_buffer_size=2M

# Connection settings
connect_timeout=10
wait_timeout=28800
interactive_timeout=28800

# Slow query log
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow.log
long_query_time=2

# Error log
log_error=/var/log/mysql/error.log

# Binary log (disabled for memory saving)
skip-log-bin

[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4
